        <inSequence>
            <log level="custom">
                <property name="Logging" value="Inside Favourite route"/>
            </log>
            <payloadFactory media-type="xml">
                <format>
                    <inline xmlns="">
                        <message>Hello World 2.0...!</message>
                        <message>CI/CD Flow Demo!</message>
                    </inline>
                </format>
                <args/>
            </payloadFactory>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
